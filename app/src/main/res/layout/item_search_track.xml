<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/track_item_search_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/search_track_artWork"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/image_border_radius"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_track_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="title"
        android:textColor="?attr/primaryText"
        android:textSize="@dimen/title"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/search_track_artWork"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_track_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="artist"
        android:textSize="@dimen/artist_name"
        android:textColor="?attr/secondaryText"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_track_title"
        app:layout_constraintLeft_toRightOf="@+id/search_track_artWork" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider_light"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>